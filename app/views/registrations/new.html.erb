<h1>Connexion</h1>

<%= form_for @user do |f|%>
	<div class="form-group">
		<label>Ton pseudo</label>
		<%= f.text_field :name, type: 'text', class: 'form-control' %>
	</div>

	<div class="form-group">
		<label>Ton email</label>
		<%= f.text_field :email, type: 'email', class: 'form-control' %>
	</div>

	<div class="form-group">
		<label>Ton mot de passe</label>
		<%= f.text_field :password, type: 'password', class: 'form-control' %>
	</div>

	<div class="form-group">
    	<%= f.submit "Valider", class: 'btn btn-success' %>
  	</div>
<% end %>